{% block content %}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="invoice-title">
                        <h4 class="float-right font-size-15">Invoice #{{ form_row(form.invoiceNumber) }} <span class="badge bg-success font-size-12 ms-2">{{ form_row(form.status) }}</span></h4>
                        <div class="mb-4">
                            <h2 class="mb-1 text-muted">{{ form_row(form.companyName) }}</h2>
                        </div>
                        <div class="text-muted">
                            <p class="mb-1">{{ form_row(form.companyAddress) }}</p>
                            <p class="mb-1"><i class="uil uil-envelope-alt me-1"></i> {{ form_row(form.companyEmail) }}</p>
                            <p><i class="uil uil-phone me-1"></i> {{ form_row(form.companyPhone) }}</p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="text-muted">
                                <h5 class="font-size-16 mb-3">Billed To:</h5>
                                <h5 class="font-size-15 mb-2">{{ form_row(form.billedToName) }}</h5>
                                <p class="mb-1">{{ form_row(form.billedToAddress) }}</p>
                                <p class="mb-1">{{ form_row(form.billedToEmail) }}</p>
                                <p>{{ form_row(form.billedToPhone) }}</p>
                            </div>
                        </div>
                        <!-- columnEnd -->
                        <div class="col-sm-6">
                            <div class="text-muted text-sm-right">
                                <div>
                                    <h5 class="font-size-15 mb-1">Invoice No:</h5>
                                    <p>#{{ form_row(form.invoiceNo) }}</p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="font-size-15 mb-1">Invoice Date:</h5>
                                    <p>{{ form_row(form.invoiceDate) }}</p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="font-size-15 mb-1">Order No:</h5>
                                    <p>#{{ form_row(form.orderNo) }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="py-2">
                        <h5 class="font-size-15">Order Summary</h5>

                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap table-centered mb-0">
                                <thead>
                                <tr>
                                    <th style="width: 70px;">No.</th>
                                    <th>Item</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th class="text-right" style="width: 120px;">Total</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in form.invoiceItems %}
                                <tr>
                                    <th scope="row">{{ form_row(item.number) }}</th>
                                    <td>
                                        <div>
                                            <h5 class="text-truncate font-size-14 mb-1">{{ item.name }}</h5>
                                            <p class="text-muted mb-0">{{ item.description }}</p>
                                        </div>
                                    </td>
                                    <td>$ {{ item.price }}</td>
                                    <td>{{ item.quantity }}</td>
                                    <td class="text-right">$ {{ item.total }}</td>
                                </tr>
                                {% endfor %}
                                <tr>
                                    <th scope="row" colspan="4" class="text-right">Sub Total</th>
                                    <td class="text-right">$ {{ form_row(form.subTotal) }}</td>
                                </tr>
                                <tr>
                                    <th scope="row" colspan="4" class="border-0 text-right">
                                        Discount :</th>
                                    <td class="border-0 text-right">- $ {{ form_row(form.discount) }}</td>
                                </tr>
                                <tr>
                                    <th scope="row" colspan="4" class="border-0 text-right">
                                        Shipping Charge :</th>
                                    <td class="border-0 text-right">$ {{ form_row(form.shippingCharge) }}</td>
                                </tr>
                                <tr>
                                    <th scope="row" colspan="4" class="border-0 text-right">
                                        Tax</th>
                                    <td class="border-0 text-right">$ {{ form_row(form.tax) }}</td>
                                </tr>
                                <tr>
                                    <th scope="row" colspan="4" class="border-0 text-right">Total</th>
                                    <td class="border-0 text-right"><h4 class="m-0 fw-semibold">$ {{ form_row(form.total) }}</h4></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="d-print-none mt-4">
                            <div class="float-right">
                                <a href="javascript:window.print()" class="btn btn-success me-1"><i class="fa fa-print"></i></a>
                                <a href="#" class="btn btn-primary w-md">Send</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

