{% block content %}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    {% include '/pages/invoice/new_invoice_header.html.twig' %}
                    <hr class="my-4">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="text-muted">
                                <h5 class="font-size-16 mb-3">Billed To:</h5>
                                <h5 class="font-size-15 mb-2">
                                    <label>
                                        <input
                                                name="{{ field_name(form.billedToName) }}"
                                                value="{{ field_value(form.billedToName) }}"
                                                placeholder="{{ field_label(form.billedToName) }}"
                                                class="form-control"
                                        >
                                    </label>
                                </h5>
                                <p class="mb-1">
                                    <label>
                                        <input
                                           name="{{ field_name(form.billedToAddress) }}"
                                           value="{{ field_value(form.billedToAddress) }}"
                                           placeholder="{{ field_label(form.billedToAddress) }}"
                                           class="form-control"
                                        >
                                    </label>
                                </p>
                                <p class="mb-1">
                                    <label>
                                        <input
                                           name="{{ field_name(form.billedToEmail) }}"
                                           value="{{ field_value(form.billedToEmail) }}"
                                           placeholder="{{ field_label(form.billedToEmail) }}"
                                           class="form-control"
                                        >
                                    </label>
                                </p>
                                <p>
                                    <label>
                                        <input
                                            name="{{ field_name(form.billedToPhone) }}"
                                            value="{{ field_value(form.billedToPhone) }}"
                                            placeholder="{{ field_label(form.billedToPhone) }}"
                                            class="form-control"
                                        >
                                    </label>
                                </p>
                            </div>
                        </div>
                        <!-- columnEnd -->
                        <div class="col-sm-6">
                            <div class="text-muted text-sm-right">
                                <div>
                                    <h5 class="font-size-15 mb-1">Invoice No:</h5>
                                    <p>
                                        <label>
                                            <input
                                                name="{{ field_name(form.invoiceNo) }}"
                                                value="{{ field_value(form.invoiceNo) }}"
                                                placeholder="{{ field_label(form.invoiceNo) }}"
                                                class="form-control"
                                            >
                                        </label>
                                    </p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="font-size-15 mb-1">Invoice Date:</h5>
                                    <p>
                                        <label>
                                            <input
                                                name="{{ field_name(form.invoiceDate) }}"
                                                value="{{ field_value(form.invoiceDate) }}"
                                                placeholder="{{ field_label(form.invoiceDate) }}"
                                                class="form-control"
                                            >
                                        </label>
                                    </p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="font-size-15 mb-1">Order No:</h5>
                                    <p>
                                        <label>
                                            <input
                                                name="{{ field_name(form.orderNo) }}"
                                                value="{{ field_value(form.orderNo) }}"
                                                placeholder="{{ field_label(form.orderNo) }}"
                                                class="form-control"
                                            >
                                        </label>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="py-2">
                        <h5 class="font-size-15">Order Summary</h5>

                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap table-centered mb-0">
                                <thead>
                                <tr>
                                    <th style="width: 70px;">No.</th>
                                    <th>Item</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th class="text-right" style="width: 120px;">Total</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in form.invoiceItems %}
                                <tr>
                                    <th scope="row">{{ form_row(item.number) }}</th>
                                    <td>
                                        <div>
                                            <h5 class="text-truncate font-size-14 mb-1">{{ item.name }}</h5>
                                            <p class="text-muted mb-0">{{ item.description }}</p>
                                        </div>
                                    </td>
                                    <td>$ {{ item.price }}</td>
                                    <td>{{ item.quantity }}</td>
                                    <td class="text-right">$ {{ item.total }}</td>
                                </tr>
                                {% endfor %}
                                <tr>
                                    <th scope="row" colspan="4" class="text-right">Sub Total</th>
                                    <td class="text-right">
                                        <label>
                                            <input
                                                name="{{ field_name(form.subTotal) }}"
                                                value="{{ field_value(form.subTotal) }}"
                                                placeholder="{{ field_label(form.subTotal) }}"
                                                class="form-control"
                                            >
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row" colspan="4" class="border-0 text-right">
                                        Tax</th>
                                    <td class="border-0 text-right">
                                        <label>
                                            <input
                                                name="{{ field_name(form.tax) }}"
                                                value="{{ field_value(form.tax) }}"
                                                placeholder="{{ field_label(form.tax) }}"
                                                class="form-control"
                                            >
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row" colspan="4" class="border-0 text-right">Total</th>
                                    <td class="border-0 text-right">
                                        <h4 class="m-0 fw-semibold">
                                            <label>
                                                <input
                                                    name="{{ field_name(form.total) }}"
                                                    value="{{ field_value(form.total) }}"
                                                    placeholder="{{ field_label(form.total) }}"
                                                    class="form-control"
                                                >
                                            </label>
                                        </h4>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="d-print-none mt-4">
                            <div class="float-right">
                                <a href="javascript:window.print()" class="btn btn-success me-1"><i class="fa fa-print"></i></a>
                                <a href="#" class="btn btn-primary w-md">Send</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

