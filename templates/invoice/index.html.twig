{% extends 'base.html.twig' %}

{% block title %}Create Invoice{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css">
    <style>
        .container {
            max-width: 600px;
        }

        .card {
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 15px;
            border-radius: 10px 10px 0 0;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .invoice-items-container {
            margin-top: 20px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            padding: 10px;
        }

        .invoice-item-fields {
            border-bottom: 1px solid #ced4da;
            padding: 10px 0;
        }

        .btn-create-invoice {
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .btn-create-invoice:hover {
            background-color: #1e7e34;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Create Invoice</h1>
            </div>
            <div class="card-body">
                {% form_theme form 'invoice/form_invoice_item.html.twig' %}
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.customer, 'Customer', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.customer, {'attr': {'class': 'form-control', 'onchange': 'updateCustomerFields(this.value)'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.customer_address, 'Customer Address', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.customer_address, {'attr': {'class': 'form-control', 'data-field-name': 'address'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.customer_email, 'Customer Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.customer_email, {'attr': {'class': 'form-control', 'data-field-name': 'email'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.total_price, 'Total Price', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.total_price, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.due_date, 'Due Date', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.due_date, {'attr': {'class': 'form-control'}}) }}
                </div>

                <h3>Invoice Items</h3>
                <div id="invoice-items"
                     data-prototype="{{ form_widget(
                         form.invoice_items.vars.prototype,
                         {'block_prefix': 'invoice_item_type'}
                     )|e }}">
                    {{ form_widget(form.invoice_items) }}
{#                    {{ form_row(form.invoice_items, {'block_prefix': 'invoice_item_type'}) }#}
                </div>

                <button type="button" class="btn btn-success" id="add-invoice-item">Add Invoice Item</button>

                <div class="text-center">
                    <button type="submit" class="btn btn-create-invoice">Create Invoice</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        function updateCustomerFields(customerId) {
            const apiUrl = '/api/customer/' + customerId;

            fetch(apiUrl)
                .then((response) => response.json())
                .then((data) => {
                    // console.log(data);
                    for (const field of document.querySelectorAll('[data-field-name]')) {
                        const fieldName = field.getAttribute('data-field-name');
                        if (data[fieldName]) {
                            field.value = data[fieldName];
                        }
                    }
                })
                .catch((error) => {
                    console.error('Error:', error);
                });
        }

        //ADD INVOICE ITEM
        document.addEventListener('DOMContentLoaded', function() {
            const addButton = document.getElementById('add-invoice-item');
            const invoiceItems = document.getElementById('invoice-items');

            addButton.addEventListener('click', function() {
                // Get the prototype template and replace "__name__" with a unique index
                const prototype = invoiceItems.getAttribute('data-prototype');
                const newIndex = invoiceItems.querySelectorAll('.custom-invoice-item-form').length;
                const newForm = prototype.replace(/__name__/g, newIndex.toString());

                // add new invoice item row add it to the container
                const div = document.createElement('div');
                div.classList.add('custom-invoice-item');
                div.innerHTML = newForm;
                invoiceItems.appendChild(div);

                // remove button using event delegation
                div.addEventListener('click', function(event) {
                    if (event.target.classList.contains('remove-invoice-item')) {
                        div.remove();
                    }
                });
            });
        });
    </script>
{% endblock %}
