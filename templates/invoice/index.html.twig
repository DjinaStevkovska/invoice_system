{% extends 'base.html.twig' %}

{% block title %}Create Invoice{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/css/bootstrap.min.css">
    <style>
        .container {
            max-width: 600px;
        }

        .card {
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 15px;
            border-radius: 10px 10px 0 0;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .invoice-items-container {
            margin-top: 20px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            padding: 10px;
        }

        .invoice-item-fields {
            border-bottom: 1px solid #ced4da;
            padding: 10px 0;
        }

        .btn-create-invoice {
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .btn-create-invoice:hover {
            background-color: #1e7e34;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Create Invoice</h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.customer, 'Customer', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.customer, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.customer_address, 'Customer Address', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.customer_address, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                </div>

                <div class="invoice-items-container">
                    <h4>Invoice Items</h4>
                    {% for item in form.invoiceItems %}
                        <div class="invoice-item-fields">
                            {{ form_row(item.name, {'label': 'Item Name'}) }}
                            {{ form_row(item.quantity, {'label': 'Quantity'}) }}
                            {{ form_row(item.totalPrice, {'label': 'Total Price'}) }}
                        </div>
                    {% endfor %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.totalPrice, 'Total Price', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.totalPrice, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.dueDate, 'Due Date', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.dueDate, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-create-invoice">Create Invoice</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        function updateCustomerAddress(customerId) {
            // TODO: /api/customer/{id}
            const apiUrl = '/api/customer/' + customerId; // Example API endpoint

            fetch(apiUrl)
                .then((response) => response.json())
                .then((data) => {
                    if (data.address) {
                        document.getElementById('form.customer_address').value = data.address;
                    } else {
                        document.getElementById('form.customer_address').value = '';
                    }
                })
                .catch((error) => {
                    console.error('Error:', error);
                });
        }
    </script>
{% endblock %}
